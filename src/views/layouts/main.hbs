	<!-- Navmenu script -->
	<script>
		let body = $('body');
		let navbarMenu = $('#navbarMenu');
		let screenHeight = $(window).height();
		let scrollPosition = $(window).scrollTop();
		let classCSS = {
			HIDDEN: 'hidden',
			OPACITY_FULL: 'opacity-100'
		};
		let getClassRemoveAndAdd = {
			true: [classCSS.HIDDEN, classCSS.OPACITY_FULL],
			false: [classCSS.OPACITY_FULL, classCSS.HIDDEN]
		};

		$(document).on('ready', handleDisplayNavmenu);
		$(window).on('resize', () => screenHeight = $(window).height());
		$(window).on('scroll', () => scrollPosition = $(window).scrollTop());
		$(window).on('scroll', handleDisplayNavmenu);

		function handleDisplayNavmenu() {
			let toRemove, toAdd;
			let isVisibleHeader = scrollPosition >= screenHeight;

			[toRemove, toAdd] = getClassRemoveAndAdd[isVisibleHeader];

			navbarMenu.addClass(toAdd)
				.removeClass(toRemove);
		}
	</script>

