	<!-- Copyright Full Year script -->
	<script>
		let copyrightYear = $('#copyrightYear');

		$(document).on('ready', checkCopyrightYear);

		function checkCopyrightYear () {
			let currentYear = (new Date()).getFullYear().toString();
			let writeYear = copyrightYear.html();
			let isEqualsValue = currentYear == writeYear;

			if (!isEqualsValue) copyrightYear.html(currentYear);
